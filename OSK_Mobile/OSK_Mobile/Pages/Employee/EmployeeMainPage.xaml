<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OSK_Mobile.Pages.Employee.EmployeeMainPage">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label x:Name="userName" Text="" FontSize="20" />
        </StackLayout>
    </NavigationPage.TitleView>

    <StackLayout >
        <Grid Margin="20, 20, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="25" />
                <RowDefinition Height="150" />
                <RowDefinition Height="25" />
                <RowDefinition Height="150" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
                <ColumnDefinition   />
            </Grid.ColumnDefinitions>

            <BoxView />
            <ImageButton
                BackgroundColor="#BF043055"
                x:Name="userDataBtn"
                Source="UserDataIcon.png"
                Clicked="ShowUserData"/>

            <!--<BoxView Grid.Column="1" />
            <ImageButton Grid.Column="1"
                BackgroundColor="#BF043055"
                x:Name="courseDataBtn"
                Source="CourseIcon.png"
                 />-->

            <BoxView Grid.Row="1"  />
            <Label Grid.Row="1" Text="Dane instruktora" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!--<BoxView Grid.Row="1" Grid.Column="1" />
            <Label Grid.Row="1" Grid.Column="1" Text="Twoje kursy" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>-->

            <BoxView Grid.Row="2"  />
            <ImageButton Grid.Row="2"
                BackgroundColor="#BF043055"
                x:Name="driveDataBtn"
                Source="DriveIcon.png"
                Clicked="ShowDrives"
                />
            
            <BoxView Grid.Row="2" Grid.Column="1" 
                     BackgroundColor="#BF043055" />
            <Label Grid.Row="2" Grid.Column="1" Text="NIC" 
                   TextColor="White" FontAttributes="Bold"
                   x:Name="Btn"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"   />

            <BoxView Grid.Row="3"  />
            <Label Grid.Row="3" Text="Jazdy" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <BoxView Grid.Row="3" Grid.Column="1" />
            <Label Grid.Row="3" Grid.Column="1" Text="" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <BoxView Grid.Row="4" />
            <ImageButton Grid.Row="4"
                BackgroundColor="#BF043055"
                x:Name="settingsBtn"
                Source="SettingsIcon.png"
                />

            <BoxView Grid.Row="4" Grid.Column="1" />
            <ImageButton Grid.Row="4" Grid.Column="1"
                BackgroundColor="#BF043055"
                x:Name="logOutBtn"
                Source="LogOutIcon.png"
                Clicked="LogOut"/>

            <BoxView Grid.Row="5"  />
            <Label Grid.Row="5" Text="Ustawienia" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <BoxView Grid.Row="5" Grid.Column="1" />
            <Label Grid.Row="5" Grid.Column="1" Text="Wyloguj" FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

        </Grid>

    </StackLayout>


</ContentPage>